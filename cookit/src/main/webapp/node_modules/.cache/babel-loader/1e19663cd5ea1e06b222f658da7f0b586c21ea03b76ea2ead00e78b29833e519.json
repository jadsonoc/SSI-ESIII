em\">\n          <h3>Item {{ index+1 }}</h3>\n         <div class=\"row\">\n           <div class=\"col-sm-5\">\n             <label>Name</label>\n             <input type=\"text\" class=\"form-control\" v-model=\"item.name\">\n           </div>\n           <div class=\"col-sm-5\">\n             <label>Price</label>\n             <input type=\"number\" class=\"form-control\" v-model=\"item.price\">\n           </div>\n           <div class=\"col-sm-2 pt-4\">\n             <button type=\"button\" class=\"btn btn-danger btn-sm\" @click=\"removeRow(index)\">x</button>&nbsp;\n             <button type=\"button\" class=\"btn btn-success btn-sm\" @click=\"addRow\">+</button>\n           </div>\n         </div>\n\n        \n      </div>\n         <button type=\"button\" class=\"btn btn-success mt-3\" @click=\"saveItem\">Save</button>\n     </div>\n   </div>\n  </div>\n\n                  <button \n                      @click=\"handleSave()\"\n                      :disabled=\"isSaving\"\n                      type=\"button\"\n                      class=\"btn btn-outline-primary mt-3\">\n                      Save Recipe\n                  </button>\n              </form>\n          </div>\n      </div>\n    </layout-div>\n  </template>\n   \n  <script>\n  import { reactive } from 'vue'\n  import axios from 'axios';\n  import LayoutDiv from '../components/LayoutDiv.vue';\n  import Swal from 'sweetalert2'\n  \n  export default {\n    name: 'RecipeCreate',\n    components: {\n      LayoutDiv,\n    },\n    setup() {\n      const form = reactive([\n      { name : '', price: 0}\n      ])\n\n      const addRow = () => {\n        form.push({ name : '', price: 0})\n      }\n\n      const removeRow = (index) =>{\n        if(form.length > 1){\n          form.splice(index,1)\n        }\n      }\n    },\n    data() {\n      return {\n        recipe: {\n          name: '',\n          preparation: '',\n          time: '',\n          serve: '',\n          difficulty: '', \n          ingredients: [{}],\n          form,\n      addRow,\n      saveItem,\n      removeRow\n        },\n        //ingredientField: [{ food: '', quantity: '' }],\n        isSaving:false,\n      };\n    },\n    methods: {\n      addIngredient: function () {\n          this.ingredientField.push({food: '', quantity: '' });\n      },\n      deleteIngredient: function (index) {\n        console.log(index);\n        console.log(this.ingredients);\n        this.ingredientField.splice(index, 1);\n        if(index===0)\n        this.addIngredient()\n      },\n      handleSave() {\n          this.isSaving = true\n          axios.post('/recipes', this.recipe)\n            .then(response => {\n              Swal.fire({\n                  icon: 'success',\n                  title: 'Recipe saved successfully!',\n                  showConfirmButton: false,\n                  timer: 1500\n              })\n              this.isSaving = false\n              this.recipe.name = \"\"\n              this.recipe.preparation = \"\"\n              this.recipe.time = \"\"\n              this.recipe.serve = \"\"\n              this.recipe.difficulty = \"\"\n              return response\n            })\n            .catch(error => {\n              this.isSaving = false\n              Swal.fire({\n                  icon: 'error',\n                  title: 'An Error Occured!',\n                  showConfirmButton: false,\n                  timer: 1500\n              })\n              return error\n            });\n      },\n    },\n  };\n  </script>"],"mappings":";AAmHE,SAASA,QAAO,QAAS,KAAI;AAC7B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,SAAQ,MAAO,6BAA6B;AACnD,OAAOC,IAAG,MAAO,aAAY;AAE7B,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,UAAU,EAAE;IACVH;EACF,CAAC;EACDI,KAAKA,CAAA,EAAG;IACN,MAAMC,IAAG,GAAIP,QAAQ,CAAC,CACtB;MAAEI,IAAG,EAAI,EAAE;MAAEI,KAAK,EAAE;IAAC,EACpB;IAED,MAAMC,MAAK,GAAIA,CAAA,KAAM;MACnBF,IAAI,CAACG,IAAI,CAAC;QAAEN,IAAG,EAAI,EAAE;QAAEI,KAAK,EAAE;MAAC,CAAC;IAClC;IAEA,MAAMG,SAAQ,GAAKC,KAAK,IAAI;MAC1B,IAAGL,IAAI,CA